# microservice specific routes

GET     /requests/:requestId               @uk.gov.hmrc.agentclientauthorisation.controllers.AuthorisationRequestController.getRequest(requestId: String)
POST    /requests/:requestId/accept        @uk.gov.hmrc.agentclientauthorisation.controllers.AuthorisationRequestController.acceptRequest(requestId: String)
POST    /requests/:requestId/reject        @uk.gov.hmrc.agentclientauthorisation.controllers.AuthorisationRequestController.rejectRequest(requestId: String)
GET     /requests                          @uk.gov.hmrc.agentclientauthorisation.controllers.AuthorisationRequestController.getRequests()
POST    /requests                          @uk.gov.hmrc.agentclientauthorisation.controllers.AuthorisationRequestController.createRequest()

GET     /lookup/sa/:saUtr/:postcode        @uk.gov.hmrc.agentclientauthorisation.sa.controllers.SaLookupController.authoriseAndLookup(saUtr: uk.gov.hmrc.domain.SaUtr, postcode: String)

# Required by API Platform
GET     /api/definition                    @uk.gov.hmrc.api.controllers.DocumentationController.definition()
